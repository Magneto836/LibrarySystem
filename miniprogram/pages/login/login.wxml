<!-- login.wxml -->
<view class="login-container">
  <!-- 头像上传区域 -->
  <button 
    class="custom-avatar-btn avatar-animation" 
    open-type="chooseAvatar" 
    bind:chooseavatar="handleChooseAvatar"
  >
    <image class="avatar" src="{{avatarUrl || '/images/default-avatar.png'}}"></image>
  </button>
  <view class="tip-text">点击头像修改资料照片</view>

  <!-- 昵称输入区域 -->
  <input 
    type="nickname" 
    class="nickname-input" 
    placeholder="请输入昵称"
    placeholder-class="input-placeholder"
    value="{{nickname}}" 
    bind:change="onNicknameChange" 
  />

  <!-- 提交按钮 -->
  <button class="submit-btn" bindtap="handleSubmit">立即登录</button>
</view>