/* pages/home/home.wxss */
.page-container {
  min-height: 100vh;
  background: #f5f6fa;
}

.header-bg {
  width: 100%;
  height: 380rpx;
  position: fixed;
  top: 0;
  z-index: 0;
  filter: brightness(0.95);
}

.content-wrapper {
  position: relative;
  z-index: 1;
  padding: 24rpx;
}

/* 卡片通用样式 */
.selection-card,
.status-card {
  background: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.04);
  margin-bottom: 32rpx;
  padding: 32rpx;
}

.warning-text {
  font-size: 34rpx;
  color: #2d3436;
  font-weight: 600;
  margin-bottom: 24rpx;
}

.action-panel {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.tip-text {
  font-size: 28rpx;
  color: #636e72;
  flex: 1;
}

.selection-btn {
  background: linear-gradient(135deg, #ff9a44, #ff6b6b);
  color: white !important;
  border-radius: 48rpx;
  
  font-size: 30rpx;
  margin-left: 32rpx;
}

/* 资源状态模块 */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 32rpx;
  color: #2d3436;
  font-weight: 600;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 36rpx;
  background: #07C160;
  border-radius: 4rpx;
}

.refresh-btn {
  background: #abcdef;
  color: #4b6584;
  border-radius: 40rpx;
  padding: 12rpx 32rpx;
  font-size: 26rpx;
}

/* 资源项样式 */
.resource-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
}

.resource-cell {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
}

.resource-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.type-icon {
  color: #07C160;
  font-size: 36rpx;
  margin-right: 16rpx;
}

.resource-type {
  font-size: 28rpx;
  color: #2d3436;
  font-weight: 500;
}

/* 进度条组件 */
.progress-container {
  margin-top: 16rpx;
}

.progress-labels {
  display: flex;
  justify-content: space-between;
  font-size: 24rpx;
  color: #636e72;
  margin-bottom: 12rpx;
}

.progress-bar {
  height: 16rpx;
  background: #e9ecef;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-active {
  height: 100%;
  background: linear-gradient(90deg, #74b9ff, #0984e3);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

/* 交互状态 */
.btn-hover {
  opacity: 0.88;
  transform: scale(0.98);
}



/* 预约卡片样式 */
.appointment-card {
  position: relative;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 24rpx 0;
  box-shadow: 0 8rpx 24rpx rgba(0,0,0,0.06);
  overflow: hidden;
}

/* 状态徽章 */
.status-badge {
  position: absolute;
  top: 16rpx;
  right: -34rpx;
  width: 120rpx;
  height: 40rpx;
  background: #4b6584;
  color: white;
  font-size: 22rpx;
  text-align: center;
  line-height: 40rpx;
  transform: rotate(45deg);
  box-shadow: -2rpx 2rpx 4rpx rgba(0,0,0,0.1);
}

.status-badge.active {
  background: linear-gradient(135deg, #07C160, #16a085);
}

.status-badge.pending {
  background: linear-gradient(135deg, #ff9f43, #ff9f43);
}

/* 主要信息区 */
.primary-info {
  display: flex;
  align-items: baseline;
  margin-bottom: 32rpx;
}

.type-tag {
  font-size: 36rpx;
  font-weight: 700;
  color: #2d3436;
  margin-right: 16rpx;
  position: relative;
  padding-left: 16rpx;
}

.type-tag::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 24rpx;
  background: #07C160;
}

.number-display {
  font-size: 48rpx;
  color: #0984e3;
  font-family: DIN Alternate;
  letter-spacing: 1rpx;
}

/* 时间信息组 */
.time-group {
  display: flex;
  align-items: center;
}

.time-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.time-range {
  display: flex;
  flex-direction: column;
}

.time-label {
  font-size: 24rpx;
  color: #636e72;
  margin-bottom: 4rpx;
}

.time-value {
  font-size: 28rpx;
  color: #2d3436;
  font-weight: 500;
}

/* 装饰线 */
.decorative-line {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #74b9ff 30%, #0984e3 70%);
}