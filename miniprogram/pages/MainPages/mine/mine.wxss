/* 全局样式 */

.container {
  padding: 30rpx;
  background: #f0f2f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.title {
  font-size: 40rpx;
  font-weight: 700;
  color: #1a237e;
  margin-bottom: 40rpx;
  text-align: center;
  padding: 0 20rpx;
}

/* 卡片样式 */
.card {
  width: 100%;
  max-width: 750rpx;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.08);
  overflow: hidden;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1); 
}

/* 卡片头部 */
.card-header {
  padding: 36rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #f5f5f5;
  font-weight: 600;
  color: #0d47a1;

  transition: background-color 0.2s ease;
}


.toggle-icon {
  font-size: 36rpx;
  font-weight: bold;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* 可折叠内容区域 */
/* 可折叠内容区域 */
.card-content {
  will-change: height;
  overflow: hidden;
  max-height: 2000rpx; /* 初始状态设为 0 */
  opacity: 0;
  transition: 
    max-height 0.3s cubic-bezier(0.4, 0, 0.2, 1),
    opacity 0.2s ease;
}

.card-content.expanded {
  height: auto; /* 动态高度 */
  opacity: 1;
}

/* scroll-view 样式 */
scroll-view {

  overflow-y: auto; /* 允许垂直滚动 */
}
/* 记录列表样式 */
.records-list {
  margin-top: 20rpx;
}


/* 滚动条样式（可选） */
scroll-view::-webkit-scrollbar {
  width: 6px;
  height: 6px;
}

scroll-view::-webkit-scrollbar-thumb {
  background-color: #ccc;
  border-radius: 3px;
}

/* 记录项样式 */


.record-item:hover {
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
  transform: translateY(-4rpx);
}

.record-info {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}



.record-details {
  font-size: 28rpx;
  color: #424242;
  line-height: 1.5;
}

/* 状态标签颜色 */
.record-status.active {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  color: #27ae60;
  animation: breath 2s infinite ease-in-out;
}

.record-status.pending {
  background: linear-gradient(135deg, #fff9c4 0%, #ffecb3 100%);
  color: #ffa000;
}

.record-status.completed {
  background: linear-gradient(135deg, #e1f5fe 0%, #b3e5fc 100%);
  color: #0277bd;
}
/* 记录项容器 */
.record-item {
  position: relative; /* 用于定位状态标签和按钮 */
  padding: 20rpx 110rpx 50rpx 40rpx;
  margin-bottom: 0rpx;
  background: #f5f7fa;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  gap: 20rpx; /* 主要信息与时间的间距 */
  transition: box-shadow 0.3s ease;
}

/* 主要信息容器 */
.record-main {
  flex: 1; /* 占据剩余空间 */
}

/* 楼层和编号（标题） */
.record-title {
  font-size: 34rpx; /* 加大字号 */
  color: #222; /* 深色突出显示 */
  font-weight: 600;
  margin-bottom: 10rpx;
}

/* 使用时间 */
.record-time {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
}

/* 状态标签（右上角） */
.record-status {
  position: absolute;
  top: 12rpx;
  right: 32rpx;
  padding: 6rpx 16rpx;
  font-size: 24rpx;
  border-radius: 8rpx;

}

/* 取消按钮（右下角） */
.cancel-btn {
  position: absolute;
  bottom: 20rpx;
  height:10rpx;
  right: 24rpx;
  padding: 5rpx 6rpx;
  font-size: 26rpx;
  background: #ff4081;
  color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 8rpx rgba(255, 64, 129, 0.3); /* 增强视觉效果 */
  transition: transform 0.2s ease;
}

.cancel-btn:hover {
  transform: scale(0.98);
  box-shadow: 0 6rpx 12rpx rgba(255, 64, 129, 0.5);
}


.cancel-btn:active {
  transform: scale(0.95);
}
.card-content.expanded .record-item {
  opacity: 1;
  transform: translateY(0);
  transition-delay: calc(0.1s * var(--i)); /* 添加阶梯延迟效果 */
}

/* 动画 */
@keyframes breath {
  0%, 100% {
    opacity: 1;
    transform: scale(1);
  }
  50% {
    opacity: 0.9;
    transform: scale(0.98);
  }
}