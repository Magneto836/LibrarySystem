.container {
  background-color: #f7f7f7;
  height: 100vh;
  padding: 0 20rpx;
}

/* 用户信息区域 */
.user-info {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 40rpx;
  margin-top: 40rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.05);
  display: flex;
  flex-direction: column;
  align-items: center;
}

.avatar-wrapper {
  position: relative;
  margin-bottom: 20rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  border: 4rpx solid #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.hint-text {


  top: 50%;
  transform: translateY(-50%);
  font-size: 28rpx;
  color: #999999;
}

.nickname-wrapper {
  position: relative;
  text-align: center;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333333;
}

/* 功能列表区域 */
.function-list {
  margin-top: 40rpx;
}

.list-item {
  background-color: #ffffff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: transform 0.2s;
}

.list-item:active {
  transform: translateY(2rpx);
}

.list-title {
  font-size: 32rpx;
  color: #333333;
}

.arrow-right {
  display: flex;
  align-items: center;
}

.icon {
  font-size: 36rpx;
  color: #999999;
}

/* 管理员登录特殊样式 */
.admin-login {
  opacity: 0.8;
  background-color: #f5f5f5;
}
/* 管理员登录弹窗样式 */
.admin-login-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

/* 管理员登录弹窗样式优化 */
.modal-content {
  background-color: white;
  border-radius: 20rpx;
  width: 80%;
  max-width: 500rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.1);
}

.modal-title {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
  color: #333333;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
  padding-bottom: 20rpx;
}

.modal-input {
  width: 100%;
  height: 80rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 0 20rpx;
  margin-bottom: 40rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.modal-buttons {
  display: flex;
  justify-content: center;
  gap: 30rpx;
}

.cancel-btn, .confirm-btn {
  width: 200rpx;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  border: none;
  cursor: pointer;
  transition: all 0.3s ease;
}

.cancel-btn {
  background-color: #f0f0f0;
  color: #666666;
}

.confirm-btn {
  background-color: #1aad19;
  color: white;
}

/* 按钮悬停效果 */
.cancel-btn:hover {
  background-color: #e0e0e0;
}

.confirm-btn:hover {
  background-color: #0a980f;
}

/* 按钮点击效果 */
.cancel-btn:active, .confirm-btn:active {
  transform: scale(0.98);
}