<view class="container" style="height: 1210rpx; display: block; box-sizing: border-box">
  <view class="message-icon" bindtap="goToMessages">
    <text class="icon">✉️</text>
  </view>
  <!-- 用户信息区域 -->
  <view class="user-info">
    <view class="avatar-wrapper" bindtap="chooseAvatar">
      <image class="avatar" src="{{userInfo.avatarUrl}}" mode="aspectFill"></image>
    </view>
    <view class="nickname-wrapper" bindtap="editNickname">
      <text class="nickname">{{userInfo.nickname}}</text>
    </view>
  </view>

  <!-- 提示文字 -->
  <view class="hint-container" style="width: 335rpx; display: block; box-sizing: border-box">
    <text class="hint-text" style="position: relative; left: 168rpx; top: NaNrpx">点击头像昵称修改个人信息</text>
  </view>

  <!-- 功能列表区域 -->
  <view class="function-list">
    <!-- 预约记录入口 -->
    <view class="list-item" bindtap="goToAppointments">
      <text class="list-title">我的预约</text>
      <view class="arrow-right">
        <text class="icon">›</text>
      </view>
    </view>

    <!-- 管理员登录入口 -->
    <view class="list-item admin-login" bindtap="showAdminLogin" wx:if="{{isAdmin}}">
      <text class="list-title">管理员登录</text>
      <view class="arrow-right">
        <text class="icon">›</text>
      </view>
    </view>
  </view>

<!-- 管理员登录弹窗 -->
<view class="admin-login-modal" wx:if="{{showAdminInput}}">
  <view class="modal-content">
    <text class="modal-title">管理员登录</text>
    <input 
      class="modal-input" 
      type="password" 
      placeholder="请输入管理员密码" 
      value="{{inputPassword}}" 
      bindinput="onAdminPasswordInput"
    />
    <view class="modal-buttons">
      <button class="cancel-btn" bindtap="cancelAdminLogin">取消</button>
      <button class="confirm-btn" bindtap="handleAdminLogin">确定</button>
    </view>
  </view>
</view>


  
</view>