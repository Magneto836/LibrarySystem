/* 全局样式 */
.container {
  padding: 30rpx;
  background: #f5f7fa;
  min-height: 100vh;
}

/* 讨论区卡片样式 */
.discussion-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

/* 卡片头部 */
.card-header {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
}

.discussion-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.discussion-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #2c3e50;
}

.discussion-status {
  font-size: 24rpx;
  color: #7f8c8d;
  margin-top: 8rpx;
}

.arrow-icon {
  width: 36rpx;
  height: 36rpx;
  transition: transform 0.3s ease;
}

.expanded .arrow-icon {
  transform: rotate(180deg);
}

/* 可折叠内容区域 */
.card-content {
  overflow: hidden;
  transition: height 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  padding: 0 32rpx;
}

.scroll-area {
  width: 100%;
  padding: 0 20rpx;
}

.discussion-grid {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  padding-bottom: 40rpx;
}

/* 讨论区按钮 */
.discussion-btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 29rpx 30rpx;
  border-radius: 12rpx;
  transition: all 0.2s ease;
  background-color: #f8f9fa;
  width: 94%;
  margin: 0rpx;
  box-sizing: border-box;
}

.discussion-btn.available {
  border: 2rpx solid #80c9ff;
  animation: breath 2s infinite ease-in-out;
}

.discussion-btn.occupied {
  opacity: 0.7;
  border: 2rpx solid #ddd;
}

.discussion-info-left {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.discussion-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 16rpx;
}

.discussion-number {
  font-size: 30rpx;
  color: #2c3e50;
  font-weight: 500;
}

.discussion-info-right {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.discussion-capacity {
  font-size: 30rpx;
  color: #666;
  margin-bottom: 8rpx;
}

.status-text {
  font-size: 27rpx;
  padding: 8rpx 16rpx;
  border-radius: 10rpx;
}

.discussion-btn.available .status-text {
  background-color: rgba(39, 174, 96, 0.2);
  color: #27ae60;
}

.discussion-btn.occupied .status-text {
  background-color: rgba(231, 76, 60, 0.2);
  color: #e74c3c;
}

/* 交互效果 */
.discussion-btn:active {
  transform: scale(0.98);
}

/* 模态框容器 */
.modal-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

/* 模态内容 */
.modal-content {
  width: 80%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.1);
  animation: modalSlideIn 0.3s ease;
}

/* 日期/时间选择器 */
picker {
  margin: 30rpx 0;
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  padding: 24rpx;
  position: relative;
  transition: all 0.2s;
  background: #f8f9fa;
}

picker::after {
  content: "▼";
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  color: #999;
  font-size: 24rpx;
}

picker view {
  color: #333;
  font-size: 28rpx;
  line-height: 1.5;
}

picker:hover {
  border-color: #3E7AF5;
  box-shadow: 0 4rpx 12rpx rgba(62,122,245,0.1);
}

/* 加载指示器 */
.loading-indicator {
  text-align: center;
  padding: 32rpx;
  color: #3E7AF5;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-indicator::before {
  content: "";
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #3E7AF5;
  border-radius: 50%;
  margin-right: 16rpx;
  animation: spin 1s linear infinite;
}

/* 按钮组 */
.button-group {
  margin-top: 40rpx;
  display: flex;
  gap: 20rpx;
}

.confirm-btn, .cancel-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  transition: all 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirm-btn {
  background: #FF6B6B;
  color: white;
}

.confirm-btn:active {
  background: #FF8C42;
  transform: scale(0.98);
}

.cancel-btn {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #eee;
}

.cancel-btn:active {
  background: #f1f3f5;
  transform: scale(0.98);
}

/* 动画 */
@keyframes modalSlideIn {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes breath {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.8;
  }
}

/* 加载提示框 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.loading-spinner {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  padding: 40rpx;
  border-radius: 20rpx;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.1);
}

.spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #3E7AF5;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

.loading-text {
  font-size: 28rpx;
  color: #333;
}