/* pages/booking/booking.wxss */
.container {
  padding: 30rpx;
  background: #f5f7fa;
  min-height: 100vh;
}

/* 地点卡片样式 */
.location-card {
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.08);
}

/* 卡片头部 */
.card-header {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.3s ease;
}

.location-info {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.location-name {
  font-size: 34rpx;
  font-weight: 600;
  color: #2c3e50;
}

.location-status {
  font-size: 27rpx;
  color: #7f8c8d;
  margin-top: 8rpx;
}

.arrow-icon {
  width: 36rpx;
  height: 36rpx;
  transition: transform 0.3s ease;
}

.expanded .arrow-icon {
  transform: rotate(180deg);
}

/* 可折叠内容区域 */
.card-content {
  overflow: hidden;
  transition: height 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  padding: 0 32rpx;
}
.scroll-area {
  width: 100%;
  padding: 0 20rpx;
}
.booth-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 20rpx;
  padding-bottom: 40rpx; /* 留出滚动空间 */
}
/* 电话亭按钮 */
.booth-btn {
  width: 273rpx;
  height: 160rpx;
  margin: 20rpx;
  border-radius: 12rpx;
  display: inline-flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.available {
  background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
  border: 2rpx solid #80c9ff;
  animation: breath 2s infinite ease-in-out; /* 添加呼吸灯动画 */
  will-change: opacity; /* 提示浏览器优化 */
}

.booked {
  background: linear-gradient(135deg, #f5f7fa 0%, #e0e0e0 100%);
  opacity: 0.7;
}

.booth-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 16rpx;
}

.booth-number {
  font-size: 28rpx;
  color: #2c3e50;
  font-weight: 500;
}

.status-text {
  font-size: 24rpx;
  margin-top: 8rpx;
}

.available .status-text {
  color: #27ae60;
}

.booked .status-text {
  color: #e74c3c;
}

/* 交互效果 */
.booth-btn:active {
  transform: scale(0.96);
}

/* 模态框容器 */
.modal-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 999;
}

/* 模态内容 */
.modal-content {
  width: 80%;
  max-width: 600rpx;
  background: #fff;
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0,0,0,0.1);
  animation: modalSlideIn 0.3s ease;
}

/* 日期/时间选择器 */
picker {
  margin: 30rpx 0;
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  padding: 24rpx;
  position: relative;
  transition: all 0.2s;
  background: #f8f9fa;
}

picker::after {
  content: "▼"; /* 使用 Unicode 字符作为箭头 */
  position: absolute;
  right: 24rpx;
  top: 50%; /* 垂直居中 */
  transform: translateY(-50%); /* 确保完全居中 */
  color: #999;
  font-size: 24rpx; /* 调整箭头大小 */
}

picker view {
  color: #333;
  font-size: 28rpx;
  line-height: 1.5;
}

picker:hover {
  border-color: #3E7AF5;
  box-shadow: 0 4rpx 12rpx rgba(62,122,245,0.1);
}

/* 加载指示器 */
.loading-indicator {
  text-align: center;
  padding: 32rpx;
  color: #3E7AF5;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading-indicator::before {
  content: "";
  display: inline-block;
  width: 32rpx;
  height: 32rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #3E7AF5;
  border-radius: 50%;
  margin-right: 16rpx;
  animation: spin 1s linear infinite;
}

/* 按钮组 */
.button-group {
  margin-top: 40rpx;
  display: flex;
  gap: 20rpx;
}

.confirm-btn, .cancel-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 12rpx;
  font-size: 32rpx;
  transition: all 0.2s;
  display: flex;
  align-items: center;
  justify-content: center;
}

.confirm-btn {
  background: #FF6B6B;
  color: white;
}

.confirm-btn:active {
  background: #FF8C42;
  transform: scale(0.98);
}

.cancel-btn {
  background: #f8f9fa;
  color: #666;
  border: 2rpx solid #eee;
}

.cancel-btn:active {
  background: #f1f3f5;
  transform: scale(0.98);
}

/* 动画 */
@keyframes modalSlideIn {
  from {
    transform: translateY(100%);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

@keyframes breath {
  0%, 100% {
    opacity: 1; /* 正常状态 */
  }
  50% {
    opacity: 0.8; /* 变暗状态 */
  }
}
