/* 页面容器 */
.container {
  padding: 32rpx;
  background: linear-gradient(135deg, #f8fafc 0%, #f1f5f9 100%);
  min-height: 100vh;
  box-sizing: border-box;
}

/* 用户列表 */
.user-list {
  margin-top: 40rpx;
}

/* 用户卡片 */
.user-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  padding: 32rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(10rpx);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
  transition: all 0.3s ease;
}

.user-card:active {
  transform: translateY(4rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.03);
}

/* 用户信息布局 */
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.user-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.1);
}

.avatar {
  width: 100%;
  height: 100%;
}

.user-details {
  flex: 1;
}

.nickname {
  font-size: 32rpx;
  font-weight: 600;
  color: #1e293b;
  display: block;
  margin-bottom: 8rpx;
}

.register-time {
  font-size: 24rpx;
  color: #64748b;
  display: block;
  margin-bottom: 8rpx;
}

.admin-status {
  display: inline-block;
  padding: 4rpx 16rpx;
  border-radius: 8rpx;
  font-size: 24rpx;
  background: rgba(99, 102, 241, 0.1);
  color: #4f46e5;
}

/* 操作按钮区域 */
.user-actions {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  border-top: 1rpx solid #f1f5f9;
  padding-top: 24rpx;
}

.action-btn {
  height: 72rpx;
  border: none;
  border-radius: 12rpx;
  font-size: 28rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.2s ease;
}

.make-admin-btn {
  background: rgba(99, 102, 241, 0.1);
  color: #4f46e5;
}

.make-admin-btn:active {
  background: rgba(99, 102, 241, 0.2);
}

.revoke-admin-btn {
  background: rgba(239, 68, 68, 0.1);
  color: #ef4444;
}

.revoke-admin-btn:active {
  background: rgba(239, 68, 68, 0.2);
}

.ban-btn {
  background: rgba(239, 68, 68, 0.1);
  height: 72rpx;
  color: #ef4444;
}

.ban-btn:active {
  background: rgba(239, 68, 68, 0.2);
}

.unban-btn {
  background: rgba(16, 185, 129, 0.1);
  color: #10b981;
}

.unban-btn:active {
  background: rgba(16, 185, 129, 0.2);
}

.disabled-btn {
  height: 72rpx;
  border-radius: 12rpx;
  background: #f1f5f9;
  color: #94a3b8;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
}

/* 模态框 */
.modal-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.4);
  display: flex;
  justify-content: center;
  align-items: center;
  backdrop-filter: blur(8rpx);
}

.modal-content {
  background: white;
  width: 80%;
  border-radius: 24rpx;
  padding: 48rpx 32rpx;
  box-shadow: 0 24rpx 48rpx rgba(0, 0, 0, 0.1);
  animation: modalSlideIn 0.3s ease;
}

@keyframes modalSlideIn {
  from { transform: translateY(100rpx); opacity: 0; }
  to { transform: translateY(0); opacity: 1; }
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #1e293b;
  text-align: center;
  margin-bottom: 32rpx;
}

.password-input {
  height: 96rpx;
  border: 2rpx solid #e2e8f0;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 28rpx;
  margin-bottom: 32rpx;
  transition: all 0.2s ease;
}

.password-input:focus {
  border-color: #4f46e5;
  box-shadow: 0 0 0 3rpx rgba(79, 70, 229, 0.1);
}

.modal-buttons {
  display: flex;
  justify-content: space-between;
}

.confirm-btn, .cancel-btn {
  flex: 1;
  padding: 16rpx;
  border: none;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  cursor: pointer;
}

.confirm-btn {
  background: #4f46e5;
  color: white;
}

.cancel-btn {
  background: #f1f5f9;
  color: #64748b;
}
/* 统计模态框样式 */
.stats-modal {
  width: 90%;
  max-height: 80vh;
  padding: 30rpx;
}

.stats-section {
  margin: 40rpx 0;
}

.section-title {
  display: block;
  font-size: 32rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 20rpx;
}

/* 表格样式 */
.stats-table {
  border: 2rpx solid #eee;
  border-radius: 12rpx;
  overflow: hidden;
}

.table-row {
  display: flex;
  padding: 20rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.header {
  background-color: #f8f8f8;
  font-weight: 500;
}

.date-col {
  flex: 2;
  color: #666;
}

.week-col {
  flex: 1;
  color: #666;
}

.count-col {
  flex: 1;
  text-align: right;
  color: #1890ff;
}

/* 总计样式 */
.total-count {
  text-align: right;
  margin-top: 30rpx;
  font-size: 32rpx;
  color: #f5222d;
  padding: 20rpx 0;
}
/* 新增样式 */
.date-range-col {
  flex: 1.5;
  font-size: 24rpx;
  color: #666;
}

.type-col {
  flex: 1;
  text-align: center;
  color: #1890ff;
}

/* 调整表格列宽 */
.stats-table {
  font-size: 28rpx;
}

.table-row {
  padding: 24rpx 20rpx;
}