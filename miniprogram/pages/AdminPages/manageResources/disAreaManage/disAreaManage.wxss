.container {
  padding: 30rpx;
  background: linear-gradient(135deg, #f5f7fa 0%, #e4e8f0 100%);
  min-height: 100vh;
  position: relative;
}

/* 添加资源按钮 */
.add-resource-btn {
  position: fixed;
  right: 30rpx;
  bottom: 180rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  box-shadow: 0 10rpx 20rpx rgba(72, 187, 120, 0.3);
  z-index: 100;
}

.add-resource-btn::after {
  content: '+';
  font-weight: bold;
}

.discussion-cards {
  margin-bottom: 140rpx; /* 为操作栏留出更多空间 */
}

.discussion-card {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 25rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.08);
  transition: transform 0.3s ease;
}

.discussion-card:active {
  transform: translateY(2rpx);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 25rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.card-header.expanded {
  background: linear-gradient(135deg, #e8f4ff 0%, #f0f7ff 100%);
}

.discussion-info {
  flex: 1;
}

.discussion-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
  color: #2d3748;
}

.arrow-icon {
  width: 40rpx;
  height: 40rpx;
  transition: transform 0.3s ease;
  filter: brightness(0) invert(45%) sepia(58%) saturate(1745%) hue-rotate(175deg) brightness(101%) contrast(102%);
}

.card-header.expanded .arrow-icon {
  transform: rotate(180deg);
}

.card-content {
  overflow: hidden;
  transition: height 0.3s ease;
}

.discussion-grid {
  padding: 25rpx;
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(300rpx, 1fr));
  gap: 20rpx;
}

.discussion-btn {
  padding: 24rpx;
  margin-bottom: 20rpx;
  border-radius: 16rpx;
  background: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  display: flex;
  justify-content: space-between;
  align-items: center;
  transition: all 0.2s ease;
}

.discussion-btn.available {
  border-left: 8rpx solid #00b894;
  background: linear-gradient(90deg, rgba(0, 184, 148, 0.05) 0%, #ffffff 50%);
}

.discussion-btn.occupied {
  border-left: 8rpx solid #d63031;
  background: linear-gradient(90deg, rgba(214, 48, 49, 0.05) 0%, #ffffff 50%);
}

.discussion-btn.admin-occupied {
  border-left: 8rpx solid #718096;
  background: linear-gradient(90deg, rgba(113, 128, 150, 0.05) 0%, #f0f2f5 50%);
  opacity: 0.7;
}

.discussion-btn.selected {
  background: linear-gradient(135deg, #ebf8ff 0%, #bee3f8 100%);
  box-shadow: 0 5rpx 15rpx rgba(33, 150, 243, 0.2);
  border-left: 8rpx solid #2196F3;
  transform: translateX(10rpx);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.12);
  transition: all 0.2s ease;
}

.discussion-info-left {
  display: flex;
  align-items: center;
}

.discussion-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 15rpx;
  filter: brightness(0) invert(54%) sepia(75%) saturate(1945%) hue-rotate(175deg) brightness(93%) contrast(88%);
}

.discussion-number {
  font-size: 32rpx;
  font-weight: 600;
  color: #2d3748;
}

.discussion-info-right {
  text-align: right;
}

.discussion-capacity {
  font-size: 28rpx;
  color: #718096;
  margin-bottom: 10rpx;
}

.status-text {
  font-size: 28rpx;
  font-weight: 600;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: white;
  padding: 25rpx;
  box-shadow: 0 -10rpx 30rpx rgba(0, 0, 0, 0.1);
  display: flex;
  justify-content: center;
  gap: 30rpx;
  z-index: 10;
}

.action-btn {
  padding: 18rpx 35rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.toggle-status-btn {
  background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
  color: white;
}

.toggle-status-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 10rpx 20rpx rgba(72, 187, 120, 0.3);
}

.delete-btn {
  background: linear-gradient(135deg, #e53e3e 0%, #c53030 100%);
  color: white;
}

.delete-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 10rpx 20rpx rgba(229, 62, 62, 0.3);
}

.modal-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 100;
}

.modal-content {
  background-color: white;
  padding: 40rpx;
  border-radius: 20rpx;
  width: 80%;
  max-width: 500rpx;
  box-shadow: 0 20rpx 50rpx rgba(0, 0, 0, 0.2);
}

.modal-title {
  font-size: 40rpx;
  font-weight: 700;
  margin-bottom: 25rpx;
  color: #2d3748;
  text-align: center;
}

.modal-message {
  font-size: 32rpx;
  margin-bottom: 40rpx;
  color: #4a5568;
  text-align: center;
}

.modal-buttons {
  display: flex;
  justify-content: center;
  gap: 30rpx;
}

.confirm-btn {
  background: linear-gradient(135deg, #48bb78 0%, #38a169 100%);
  color: white;
  padding: 18rpx 40rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.confirm-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 10rpx 20rpx rgba(72, 187, 120, 0.3);
}

.cancel-btn {
  background: linear-gradient(135deg, #e53e3e 0%, #c53030 100%);
  color: white;
  padding: 18rpx 40rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s ease;
}

.cancel-btn:hover {
  transform: translateY(-2rpx);
  box-shadow: 0 10rpx 20rpx rgba(229, 62, 62, 0.3);
}

.input-group {
  margin-bottom: 20rpx;
  text-align: left;
}

.input-label {
  display: block;
  margin-bottom: 10rpx;
  font-size: 28rpx;
}

.input-field {
  width: 100%;
  padding: 10rpx;
  border: 1rpx solid #ddd;
  border-radius: 5rpx;
  font-size: 28rpx;
}