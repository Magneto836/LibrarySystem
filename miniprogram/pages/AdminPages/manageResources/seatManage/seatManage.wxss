/* 基础容器 */
.container {
  padding: 32rpx;
  background: linear-gradient(135deg, #f8f9fb 0%, #eef0f4 100%);
  min-height: 100vh;
  position: relative;
}

/* 高级加载动画 */
.loading-overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  backdrop-filter: blur(20rpx);
  background: rgba(255, 255, 255, 0.8);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.loading-spinner {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid rgba(72, 187, 120, 0.1);
  border-top-color: #48bb78;
  border-bottom-color: #48bb78;
  border-radius: 50%;
  animation: spin 0.8s cubic-bezier(0.68, -0.55, 0.27, 1.55) infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  color: #2d3748;
  font-size: 32rpx;
  font-weight: 500;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

/* 3D楼层导航 */
.floor-nav {
  display: flex;
  white-space: nowrap;
  margin-bottom: 24rpx;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10rpx);
  border-radius: 16rpx;
  padding: 12rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.06);
}

.nav-item {
  padding: 20rpx 30rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  color: #757575;
  transition: all 0.3s;
  background: linear-gradient(135deg, #f8f9fa, #f8f9fa); /* 默认背景 */
}

.nav-item.active {
  background: linear-gradient(135deg, #e6f7ff, #c8e6c9); /* 激活状态的背景 */
  color: #007bff; /* 字体颜色 */
  box-shadow: 0 4rpx 12rpx rgba(0,123,255,0.3); /* 添加阴影 */
  font-weight: 600;
}
  



/* 高级区域卡片 */
.area-list {
  margin-bottom: 160rpx;
}

.area-card {
  background: rgba(255, 255, 255, 0.98);
  border-radius: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.06);
  overflow: hidden;
  transition: all 0.3s ease;
}

.area-card:active {
  transform: translateY(-2rpx);
}

.area-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx;
  background: linear-gradient(135deg, #f8f9fb 0%, #f1f3f7 100%);
  transition: all 0.3s ease;
}

.area-header.expanded {
  background: linear-gradient(135deg, #e6f3ff 0%, #f0f8ff 100%);
}

.area-name {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.status-indicator {
  display: flex;
  align-items: center;
}

.available-count {
  font-size: 28rpx;
  color: #48bb78;
  margin-right: 16rpx;
  font-weight: 500;
}

.arrow-icon {
  width: 40rpx;
  height: 40rpx;
  transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.area-header.expanded .arrow-icon {
  transform: rotate(180deg);
}

.seat-scroll {
  overflow: hidden;
  transition: height 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.seat-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(120rpx, 1fr));
  gap: 24rpx;
  padding: 24rpx;
}

/* 拟物化座位设计 */
/* 拟物化座位设计 */
.seat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 120rpx;
  border-radius: 12rpx;
  position: relative;
  background: rgba(255, 255, 255, 0.95);
  box-shadow: 
    0 4rpx 12rpx rgba(0, 0, 0, 0.08),
    inset 0 -2rpx 4rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.seat-item.available {
  background: linear-gradient(145deg, #f0fff4 0%, #ffffff 100%);
  animation: floating 3s ease-in-out infinite;
}

.seat-item.occupied {
  background: linear-gradient(145deg, #fff5f5 0%, #ffffff 100%);
}

.seat-item.admin-occupied {
  background: linear-gradient(145deg, #f8f9fa 0%, #ffffff 100%);
  opacity: 0.8;
}

.seat-item.disabled {
  background: linear-gradient(145deg, #e0e0e0 0%, #f0f0f0 100%);
  opacity: 0.7;
  cursor: not-allowed;
}

.seat-item.selected {
  transform: scale(1.08) translateY(-6rpx);
  box-shadow: 
    0 8rpx 24rpx rgba(28, 167, 86, 0.2),
    inset 0 -2rpx 4rpx rgba(73, 64, 64, 0.05);
  z-index: 2;
  border: 2rpx solid #405750;
  background: linear-gradient(145deg, #e6f7ff 0%, #ffffff 100%);
}

@keyframes floating {
  0% { transform: translateY(0); }
  50% { transform: translateY(-10rpx); }
  100% { transform: translateY(0); }
}

.seat-background {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  opacity: 0.15;
  filter: blur(2rpx);
}

.seat-background.available-bg {
  background-color: #00b894;
}

.seat-background.occupied-bg {
  background-color: #e53e3e;
}

.seat-background.admin-occupied-bg {
  background-color: #718096;
}

.seat-background.disabled-bg {
  background-color: #a0a0a0;
}

.seat-icon {
  width: 44rpx;
  height: 44rpx;
  margin-bottom: 12rpx;
  z-index: 1;
}

.seat-id {
  font-size: 26rpx;
  font-weight: 600;
  color: #2d3748;
  z-index: 1;
}

/* 磨砂操作栏 */
.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  background: rgba(255, 255, 255, 0.96);
  backdrop-filter: blur(20rpx);
  padding: 24rpx;
  box-shadow: 0 -8rpx 40rpx rgba(0, 0, 0, 0.08);
  display: flex;
  justify-content: center;
  gap: 32rpx;
  border-radius: 24rpx 24rpx 0 0;
  z-index: 100;
}

.action-btn {
  padding: 20rpx 48rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: white;
  border: none;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  box-shadow: 
    0 4rpx 12rpx rgba(0, 0, 0, 0.1),
    inset 0 -2rpx 4rpx rgba(0, 0, 0, 0.05);
}

.action-btn:active {
  transform: scale(0.96);
}

.toggle-status-btn {
  background: linear-gradient(135deg, #7ed56f 0%, #28b485 100%);
}

.delete-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5253 100%);
}

/* 玻璃质感模态框 */
.modal-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  backdrop-filter: blur(20rpx);
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 1000;
}

.modal-content {
  background: rgba(255, 255, 255, 0.95);
  border: 1rpx solid rgba(255, 255, 255, 0.2);
  backdrop-filter: blur(40rpx);
  padding: 48rpx;
  border-radius: 24rpx;
  width: 80%;
  max-width: 600rpx;
  box-shadow: 
    0 20rpx 60rpx rgba(0, 0, 0, 0.15),
    inset 0 -2rpx 4rpx rgba(255, 255, 255, 0.3);
}

.modal-title {
  font-size: 40rpx;
  font-weight: 700;
  color: #2d3748;
  margin-bottom: 32rpx;
  text-align: center;
}

.modal-message {
  font-size: 32rpx;
  color: #4a5568;
  margin-bottom: 48rpx;
  text-align: center;
  line-height: 1.6;
}

.modal-buttons {
  display: flex;
  justify-content: center;
  gap: 32rpx;
}

.confirm-btn, .cancel-btn {
  padding: 20rpx 48rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
}

.confirm-btn {
  background: linear-gradient(135deg, #7ed56f 0%, #28b485 100%);
  color: white;
}

.cancel-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ee5253 100%);
  color: white;
}

/* 悬浮添加按钮 */
.add-seat-btn {
  position: fixed;
  right: 40rpx;
  bottom: 200rpx;
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #7ed56f 0%, #28b485 100%);
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 48rpx;
  font-weight: bold;
  box-shadow: 
    0 12rpx 32rpx rgba(126, 213, 111, 0.3),
    inset 0 -2rpx 4rpx rgba(0, 0, 0, 0.1);
  z-index: 100;
  transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  border: none;
}

.add-seat-btn:active {
  transform: scale(0.92);
}

/* 输入框美学 */
.input-group {
  margin-bottom: 24rpx;
}

.input-label {
  display: block;
  font-size: 30rpx;
  color: #4a5568;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.input-field {
  width: 100%;
  padding: 20rpx;
  background: rgba(245, 247, 250, 0.8);
  border: 1rpx solid rgba(46, 134, 222, 0.1);
  border-radius: 12rpx;
  font-size: 30rpx;
  transition: all 0.3s ease;
}

.input-field:focus {
  border-color: #7ed56f;
  box-shadow: 0 4rpx 12rpx rgba(126, 213, 111, 0.1);
  background: white;
}