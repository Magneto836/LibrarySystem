/* 容器样式 */
.container {
  background: linear-gradient(180deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 40rpx;
  min-height: 100vh;
}

/* 标题栏样式 */
.header {
  margin-bottom: 60rpx;
  text-align: center;
  animation: slideDown 0.6s ease;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #2c3e50;
  position: relative;
  display: inline-block;
  padding: 0 20rpx;
}

.title::after {
  content: '';
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  height: 4rpx;
  background: linear-gradient(90deg, #3498db 0%, #2980b9 100%);
}

/* 功能卡片网格布局 */
.dashboard-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  margin-bottom: 60rpx;
}

/* 卡片通用样式 */
.dashboard-card {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(52, 152, 219, 0.1);
  transition: all 0.3s ease;
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 300rpx;
}

.dashboard-card:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 15rpx rgba(52, 152, 219, 0.2);
}

/* 卡片图标设计 */
.card-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  background-size: contain;
  background-repeat: no-repeat;
  transition: transform 0.3s ease;
}





/* 卡片标题样式 */
.card-title {
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 500;
  text-align: center;
  line-height: 1.4;
}

/* 欢迎信息区域 */
.welcome-section {
  background: linear-gradient(135deg, rgba(255,255,255,0.9) 0%, rgba(246,248,251,0.9) 100%);
  border-radius: 24rpx;
  padding: 40rpx;
  box-shadow: 0 8rpx 30rpx rgba(52, 152, 219, 0.1);
  backdrop-filter: blur(10rpx);
  margin-top: 40rpx;
}

.welcome-text {
  display: block;
  font-size: 40rpx;
  color: #2c3e50;
  font-weight: 600;
  margin-bottom: 16rpx;
  text-align: center;
}

.welcome-subtext {
  display: block;
  font-size: 28rpx;
  color: #7f8c8d;
  text-align: center;
  letter-spacing: 1rpx;
}

/* 动画效果 */
@keyframes slideDown {
  from {
    opacity: 0;
    transform: translateY(-50rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}