/* 全局样式优化 */
.container {
  padding: 32rpx 28rpx;
  background: linear-gradient(160deg, #f8faff 0%, #f3f6fd 100%);
  min-height: 100vh;
}

.title {
  font-size: 44rpx;
  font-weight: 700;
  color: #1a237e;
  margin-bottom: 48rpx;
  position: relative;
  padding-left: 16rpx;
}

.title::after {
  content: '';
  position: absolute;
  left: 16rpx;
  bottom: -8rpx;
  width: 80rpx;
  height: 6rpx;
  background: #4a90e2;
  border-radius: 3rpx;
}

/* 卡片动效优化 */
.card {
  background: #fff;
  border-radius: 24rpx;
  margin-bottom: 32rpx;
  box-shadow: 0 12rpx 24rpx rgba(28, 56, 117, 0.06);
  transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
  overflow: hidden;
}

.card-header {
  padding: 32rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(245, 247, 250, 0.9);
  backdrop-filter: blur(8rpx);
  transition: all 0.3s ease;
}

.card-header.active {
  background: rgba(234, 238, 243, 0.9);
}

.toggle-icon {
  font-size: 32rpx;
  color: #7f8c8d;
  transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.card-header.active .toggle-icon {
  transform: rotate(180deg);
}

/* 流畅折叠动画 */
.card-content {
  will-change: height;
  max-height: 0;
  overflow: hidden;
  opacity: 0;
  transition: 
    max-height 0.4s cubic-bezier(0.77, 0, 0.175, 1),
    opacity 0.3s ease 0.1s;
}

.card-content.expanded {
  max-height: 2000rpx;
  opacity: 1;
}

/* 记录项视觉升级 */
.record-item {
  position: relative;
  padding: 32rpx;
  margin: 0 28rpx 24rpx;
  background: #fff;
  border-radius: 20rpx;
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.06);
  transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
}

.record-item:hover {
  transform: translateY(-4rpx);
  box-shadow: 0 12rpx 24rpx rgba(0,0,0,0.1);
}

.record-title {
  font-size: 32rpx;
  color: #2c3e50;
  font-weight: 600;
  line-height: 1.4;
  margin-bottom: 16rpx;
}

.record-time {
  font-size: 28rpx;
  color: #7f8c8d;
  line-height: 1.5;
}

/* 状态标签优化 */
.record-status {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  padding: 8rpx 24rpx;
  font-size: 26rpx;
  border-radius: 12rpx;
  font-weight: 500;
  backdrop-filter: blur(4rpx);
}

.record-status.active {   
  background: rgba(120, 224, 143, 0.12);
  color: #78e08f;
}

.record-status.pending {
  background: rgba(255, 193, 7, 0.12);
  color: #ffc107;
}

.record-status.completed {
  background: rgba(74, 144, 226, 0.12) ;
  color: #4a90e2;
}

/* 按钮动效优化 */
.cancel-btn {
  position: absolute;
  bottom: 28rpx;
  right: 28rpx;
  padding: 12rpx 28rpx;
  font-size: 26rpx;
  background: linear-gradient(135deg, #ff7675 0%, #ff5252 100%);
  color: #fff;
  border-radius: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 82, 82, 0.2);
  transition: all 0.2s cubic-bezier(0.23, 1, 0.32, 1);
}

.cancel-btn::after {
  content: '✕';
  margin-left: 8rpx;
  font-size: 24rpx;
}

.cancel-btn:active {
  transform: scale(0.96) translateY(2rpx);
  box-shadow: 0 2rpx 6rpx rgba(255, 82, 82, 0.3);
}

/* 入场动画 */
.card-content.expanded .record-item {
  animation: itemEnter 0.6s cubic-bezier(0.23, 1, 0.32, 1) calc(0.05s * var(--i));
}

@keyframes itemEnter {
  0% {
    opacity: 0;
    transform: translateY(40rpx);
  }
  100% {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes breath {
  0%, 100% {
    transform: scale(1);
    opacity: 1;
  }
  50% {
    transform: scale(0.98);
    opacity: 0.9;
  }
}